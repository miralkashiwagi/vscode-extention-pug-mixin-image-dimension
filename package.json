{
  "name": "pug-mixin-image-dimension",
  "displayName": "Pug Mixin Image Dimension",
  "publisher": "miral-kashiwagi",
  "description": "Pugで記述された mixin 呼び出しから画像ファイルを解析し、実際の画像サイズ（width / height）を自動挿入",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "PugMixinImageDimension.insertFull",
        "title": "Insert image size (full)"
      },
      {
        "command": "PugMixinImageDimension.insertHalf",
        "title": "Insert image size (half)"
      }
    ],
    "keybindings": [
      {
        "command": "PugMixinImageDimension.insertFull",
        "key": "ctrl+alt+1",
        "mac": "cmd+alt+1",
        "when": "editorTextFocus && resourceExtname == '.pug'"
      },
      {
        "command": "PugMixinImageDimension.insertHalf",
        "key": "ctrl+alt+2",
        "mac": "cmd+alt+2",
        "when": "editorTextFocus && resourceExtname == '.pug'"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "PugMixinImageDimension.insertFull",
          "when": "editorLangId == pug"
        },
        {
          "command": "PugMixinImageDimension.insertHalf",
          "when": "editorLangId == pug"
        }
      ]
    },
    "configuration": {
      "title": "GG Pug Image Dimension",
      "properties": {
        "PugMixinImageDimension.targetRules": {
          "type": "array",
          "description": "mixin名と画像サイズ挿入ルールの対応表",
          "default": [
            {
              "name": "img",
              "type": "imgArgs"
            },
            {
              "name": "picture",
              "type": "pictureOpts"
            },
            {
              "name": "c_cards",
              "type": "dataArray",
              "sources": [
                {
                  "imageKey": "image",
                  "widthKey": "width",
                  "heightKey": "height"
                },
                {
                  "imageKey": "imageSp",
                  "widthKey": "widthSp",
                  "heightKey": "heightSp"
                }
              ]
            }
          ],
          "items": {
            "type": "object",
            "required": [
              "name",
              "type"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "検出対象の mixin 名（+ は不要）"
              },
              "type": {
                "type": "string",
                "enum": [
                  "imgArgs",
                  "pictureOpts",
                  "dataArray"
                ],
                "description": "処理タイプ"
              },
              "altIndex": {
                "type": "number",
                "description": "imgArgs用：alt属性の引数インデックス（0開始、未指定時は1）"
              },
              "widthIndex": {
                "type": "number",
                "description": "imgArgs用：width属性の引数インデックス（0開始、未指定時は2）"
              },
              "heightIndex": {
                "type": "number",
                "description": "imgArgs用：height属性の引数インデックス（0開始、未指定時は3）"
              },
              "pcKey": {
                "type": "string",
                "description": "pictureOpts用：PC用画像のキー名（未指定時は'pc'）"
              },
              "spKey": {
                "type": "string",
                "description": "pictureOpts用：SP用画像のキー名（未指定時は'sp'）"
              },
              "pcWidthKey": {
                "type": "string",
                "description": "pictureOpts用：PC用widthのキー名（未指定時は'width'）"
              },
              "pcHeightKey": {
                "type": "string",
                "description": "pictureOpts用：PC用heightのキー名（未指定時は'height'）"
              },
              "spWidthKey": {
                "type": "string",
                "description": "pictureOpts用：SP用widthのキー名（未指定時は'widthSp'）"
              },
              "spHeightKey": {
                "type": "string",
                "description": "pictureOpts用：SP用heightのキー名（未指定時は'heightSp'）"
              },
              "sources": {
                "type": "array",
                "description": "dataArray 用：1要素内に複数画像（PC/SP等）がある場合の定義",
                "items": {
                  "type": "object",
                  "required": [
                    "imageKey",
                    "widthKey",
                    "heightKey"
                  ],
                  "properties": {
                    "imageKey": {
                      "type": "string",
                      "description": "画像ファイル名が入るキー"
                    },
                    "widthKey": {
                      "type": "string",
                      "description": "挿入する width のキー名"
                    },
                    "heightKey": {
                      "type": "string",
                      "description": "挿入する height のキー名"
                    }
                  }
                }
              }
            }
          }
        },
        "PugMixinImageDimension.imagesRoot": {
          "type": "string",
          "default": "app/assets/images",
          "description": "プロジェクトルートからの画像ディレクトリパス"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miralkashiwagi/vscode-extention-pug-mixin-image-dimension.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/acorn": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "fast-glob": "^3.3.3",
    "image-size": "^2.0.2"
  }
}
